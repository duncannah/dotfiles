#!/usr/bin/env bash

read -p "This script will delete current dotfiles and replace them with symlinks to the dotfiles folder at ~. Do you wish to continue? (Y/N)" -n 1 -r
if [[ ! $REPLY =~ ^[Yy]$ ]]
then
    [[ "$0" = "$BASH_SOURCE" ]] && exit 1 || return 1
fi

rm ~/.zshrc; ln -s ~/dotfiles/dotfiles/.zshrc ~
rm ~/.hyper.js; ln -s ~/dotfiles/dotfiles/.hyper.js ~

rm ~/.vimrc; ln -s ~/dotfiles/dotfiles/.vimrc ~
